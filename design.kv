ScreenManager:
    id: screen_manager

    StopwatchScreen:
        name: "stopwatch"

    RecapScreen:
        name: "recap"

<StopwatchScreen@MDScreen>:
    MDLabel:
        id: title
        text: "Start Now..!!"
        halign: "center"
        font_style: "H5"
        font_size: 40
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1

    MDLabel:
        id: time_label
        text: "00:00:00"
        halign: "center"
        font_style: "H2"
        font_size: 70
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1

    MDFloatingActionButton:
        id: start_btn
        icon: "play"
        md_bg_color: 0.2, 0.6, 1, 1
        size_hint: (0.17, 0.2)
        pos_hint: {"center_x": 0.4, "center_y": 0.25}
        on_release: app.toggle_start()

    MDFloatingActionButton:
        icon: "restart"
        md_bg_color: 1, 0.3, 0.3, 1
        size_hint: (0.17, 0.2)
        pos_hint: {"center_x": 0.6, "center_y": 0.25}
        on_release: app.reset()

    MDFloatingActionButton:
        icon: "arrow-right"
        md_bg_color: "black"
        size_hint: (0.17, 0.2)
        pos_hint: {"center_x": 0.92, "center_y": 0.1}
        on_release: 
            app.change_screen("recap")
            root.manager.transition.direction = "left"


<RecapScreen@MDScreen>:
    BoxLayout:
        orientation: "vertical"

        MDLabel:
            id: total_today_label
            text: "Total Hari Ini: 0 jam"
            halign: "center"
            font_style: "H6"
            size_hint_y: 0.1
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        BoxLayout:
            id: grafik_box
            orientation: 'vertical'
            size_hint: (0.9, 0.8)  # 90% width, 80% height
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDFloatingActionButton:
            icon: "arrow-left"
            md_bg_color: "black"
            size_hint: (0.17, 0.2)
            pos_hint: {"center_x": 0.1, "center_y": 0.1}
            on_release:
                app.change_screen("stopwatch")
                root.manager.transition.direction = "right"
